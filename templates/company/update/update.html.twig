{% extends 'authorized-base.html.twig' %}

{% block content %}
  <div class="card">
    <div class="card-header py-3">
      <h5 class="mb-0">
        <strong>
          {{ 'edit-company'|trans }}
        </strong>
      </h5>
    </div>

    <div class="card-body">
      {{ form_start(form) }}

      {% if not form.vars.valid %}
        <div class="alert alert-danger">
          {{ form_errors(form) }}
        </div>
      {% endif %}

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          <div data-mdb-input-init class="form-outline">
            {{ form_widget(form.name, { attr: { class: 'form-control' ~ (form.name.vars.valid ? '' : ' is-invalid') } }) }}

            {{ form_label(form.name, 'name', { label_attr: {class: 'form-label'} }) }}

            {% if not form.name.vars.valid %}
              <div class="invalid-feedback">
                {{ form_errors(form.name) }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          <div data-mdb-input-init class="form-outline">
            {{ form_widget(form.city, { attr: { class: 'form-control' ~ (form.city.vars.valid ? '' : ' is-invalid') } }) }}

            {{ form_label(form.city, 'city', { label_attr: {class: 'form-label'} }) }}

            {% if not form.city.vars.valid %}
              <div class="invalid-feedback">
                {{ form_errors(form.city) }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          <div data-mdb-input-init class="form-outline">
            {{ form_widget(form.street, { attr: { class: 'form-control' ~ (form.street.vars.valid ? '' : ' is-invalid') } }) }}

            {{ form_label(form.street, 'street', { label_attr: {class: 'form-label'} }) }}

            {% if not form.street.vars.valid %}
              <div class="invalid-feedback">
                {{ form_errors(form.street) }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          <div data-mdb-input-init class="form-outline">
            {{ form_widget(form.postcode, { attr: { class: 'form-control' ~ (form.postcode.vars.valid ? '' : ' is-invalid') } }) }}

            {{ form_label(form.postcode, 'postcode', { label_attr: {class: 'form-label'} }) }}

            {% if not form.postcode.vars.valid %}
              <div class="invalid-feedback">
                {{ form_errors(form.postcode) }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          {{ form_row(form.submit, { attr: { 'data-mdb-ripple-init': '', class: 'btn btn-primary' } }) }}
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-lg-3 col-md-6 col-12">
          {% include 'partial/_back-to-list.html.twig' with { route: path('company_details', { id: id }) } %}
        </div>
      </div>

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
