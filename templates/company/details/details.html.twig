{% extends 'authorized-base.html.twig' %}

{% block content %}
  <div class="card">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
      <h5 class="mb-0">
        <strong>
          {{ 'company'|trans }}
        </strong>
      </h5>

      <a class="btn btn-primary btn-sm" data-mdb-ripple-init href="{{ path('company_update', { id: companyDetailsDto.id }) }}" role="button">
        <i class="fa fa-plus me-2"></i>

        {{ 'edit-company'|trans }}
      </a>
    </div>

    <div class="card-body">
      <table class="table">
        <tr>
          <td>
            {{ 'name'|trans }}:
          </td>

          <td>
            {{ companyDetailsDto.name }}
          </td>
        </tr>

        <tr>
          <td>
            {{ 'city'|trans }}:
          </td>

          <td>
            {{ companyDetailsDto.city }}
          </td>
        </tr>

        <tr>
          <td>
            {{ 'street'|trans }}:
          </td>

          <td>
            {{ companyDetailsDto.street }}
          </td>
        </tr>

        <tr>
          <td>
            {{ 'postcode'|trans }}:
          </td>

          <td>
            {{ companyDetailsDto.postcode }}
          </td>
        </tr>
      </table>
    </div>
  </div>
{% endblock %}