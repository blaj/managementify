{{ form_start(form) }}

{{ form_errors(form) }}

<div class="row mb-1">
  <div class="col-lg-3 col-md-6 col-12">
    <div data-mdb-input-init class="form-outline">
      {{ form_widget(form.filter.search, { attr: { class: 'form-control' } }) }}
      {{ form_label(form.filter.search, 'search-by', { label_attr: {class: 'form-label'} }) }}
    </div>
  </div>
</div>

<div class="row mb-1">
  <div class="col-lg-3 col-md-6 col-12 d-flex align-items-end">
    {{ form_row(form.submit, { attr: { 'data-mdb-ripple-init': '', class: 'btn btn-primary' } }) }}
  </div>
</div>

<div class="d-none">
  {{ form_rest(form) }}
</div>

{{ form_end(form, { render_rest: false }) }}